# This file managed by Puppet 3.3.1 (Puppet Enterprise 3.1.0)
topicprefix     = /topic/
main_collective = mcollective
collectives     = mcollective
libdir          = /opt/puppet/libexec/mcollective/
logfile         = /etc/puppetlabs/mconotify/client.log
loglevel        = info

securityprovider = ssl
plugin.ssl_client_private = /etc/puppetlabs/mconotify/peadmin-private.pem
plugin.ssl_client_public = /etc/puppetlabs/mconotify/peadmin-public.pem
plugin.ssl_server_public = /etc/puppetlabs/mconotify/mcollective-public.pem
plugin.ssl_serializer     = yaml

connector = activemq
plugin.activemq.pool.size = 1
plugin.activemq.pool.1.host = master
plugin.activemq.pool.1.port = 61613
plugin.activemq.pool.1.user = mcollective
plugin.activemq.pool.1.password = <%= File.read('/etc/puppetlabs/mcollective/credentials') %>
plugin.activemq.pool.1.ssl = true
plugin.activemq.pool.1.ssl.ca = /etc/puppetlabs/mconotify/peadmin-cacert.pem
plugin.activemq.pool.1.ssl.key = /etc/puppetlabs/mconotify/peadmin-private.pem
plugin.activemq.pool.1.ssl.cert = /etc/puppetlabs/mconotify/peadmin-cert.pem

# Facts
factsource = yaml
plugin.yaml = /etc/puppetlabs/mcollective/facts.yaml
direct_addressing = 1
